<TouchFeedbackWidget>:
    canvas:
        Color:
            rgba: self.bg_color
        Rectangle:
            pos: self.pos
            size: self.size

<MenuWidget>:
    followWormSwitch: follow_switch
    canvas:
        Color:
            rgba: 0.1, 0.1, 0.1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size: self.parent.size
        center: self.parent.center
        Label:
            text: 'Automatic Follow The Worm'
        Switch:
            id: follow_switch
            